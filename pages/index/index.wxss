.bg {
  background: #0c1b2e;
  width: 100%;
  height: 100%;
  position: fixed;
  padding-top: 0rpx;
  z-index: -2;
}
.confirm-btn {
  font-size: 14pt;
  line-height: 85rpx;
  height: 85rpx;
  width: 60%;
  background-color: #5e8ddd;
  color: #eee;
  text-shadow: 0px 0px 15rpx #4788fb;
  box-sizing: border-box;
  border: 2rpx solid #2C58A6;
  box-shadow: 0 0 10rpx #2C58A6;
  letter-spacing:20rpx;
  text-indent: 20rpx;
}
.confirm-btn:active {
  opacity: .8;
}
.top{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0;
  margin: 3% 3% 0 3%;
  height: 300rpx;
}
.userInfo{
  padding: 0;
  margin:0;
  height: 290rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

/** 等级 **/
.levelBox{
    width:80px;
    height:80px;
    margin: 0 auto;
    display: flex;  
    align-items: center;
    justify-content: center;
}
.levelBg{
    width:80px;
    height: 80px;
    position: absolute;
}
.levelText{
    position: absolute;
    font-weight: bold;
    font-size: 16px;
    color: rgb(128, 0, 0);
}

.center{
  width: 94%;
  height: 67%;
  padding: 0;
  margin:0 3% 3% 3%;
  border-top:  2rpx solid #2C58A6;
  box-shadow: 0 0 -5rpx #2C58A6;
}
.context{
  width: 100%;
  height: 100%;
}
.msgArea{
  margin-top: 3%;
  margin-left: 3%;
  margin-right: 3%;
  width: 94%;
  height: 98%;
}
.t_line_box {
    position: absolute;
    width: 132rpx;
    height: 132rpx;
}
.t_line_box icon{
    background-color: #4788fb;
    box-shadow: 0px 0px 10rpx #4788fb;
    position: absolute;
}
.t_r_line{
    height: 2px;
    width: 16px;
    right: 0px;
    top: -1px;
}
.r_t_line{
    width: 2px;
    height: 24px;
    right: 0px;
    top: -1px;
}
.l_b_line{
    width: 2px;
    height: 24px;
    left: -1px;
    bottom: 0px;
}
.b_l_line{
    height: 2px;
    width: 16px;
    left: -1px;
    bottom: 0px;
}
/**隐藏滚动条**/
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}